<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@drawable/widget_background">

    <!-- Grid with 3 identical widgets -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:padding="0dp"
        tools:ignore="UselessParent">

        <!-- Widget 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/widget_message_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quiz_completed"
                    android:textSize="10sp"
                    android:textColor="@color/muted_foreground"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/widget_icon_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_video_library"
                    android:tint="@color/orange"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_counter_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="18sp"
                android:textColor="@color/foreground"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Widget 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/widget_message_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/accuracy"
                    android:textSize="10sp"
                    android:textColor="@color/muted_foreground"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/widget_icon_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_target"
                    android:tint="@color/green"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_counter_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="18sp"
                android:textColor="@color/foreground"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Widget 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/widget_message_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_streak"
                    android:textSize="10sp"
                    android:textColor="@color/muted_foreground"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/widget_icon_3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_fire"
                    android:tint="@color/deep_orange"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_counter_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="18sp"
                android:textColor="@color/foreground"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>