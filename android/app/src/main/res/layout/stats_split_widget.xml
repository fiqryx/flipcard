<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@drawable/widget_background">

    <!-- Horizontal container for widgets and dividers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Widget 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/widget_message_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quiz_completed"
                    android:textSize="11sp"
                    android:textColor="@color/muted_foreground"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/widget_icon_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_video_library"
                    android:tint="@color/orange"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_counter_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="18sp"
                android:textColor="@color/foreground"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Divider 1 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/divider"
                android:alpha="0.3" />
        </FrameLayout>

        <!-- Widget 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/widget_message_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/accuracy"
                    android:textSize="11sp"
                    android:textColor="@color/muted_foreground"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/widget_icon_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_target"
                    android:tint="@color/green"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_counter_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="18sp"
                android:textColor="@color/foreground"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Divider 2 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/divider"
                android:alpha="0.3" />
        </FrameLayout>

        <!-- Widget 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/widget_message_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_streak"
                    android:textSize="11sp"
                    android:textColor="@color/muted_foreground"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/widget_icon_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_fire"
                    android:tint="@color/deep_orange"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/widget_counter_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="18sp"
                android:textColor="@color/foreground"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>